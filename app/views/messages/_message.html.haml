.message{"data-id": "#{message.id}"}
  %p.messages__username
    = message.user.name
  %p.messages__post-date
    = message.created_at.strftime("%Y/%m/%d %H:%M")
  - if message.content.present?
    %p.messages__post-text
      = message.content
  = image_tag message.image.url, class: 'lower-message__image' if message.image.url.present?